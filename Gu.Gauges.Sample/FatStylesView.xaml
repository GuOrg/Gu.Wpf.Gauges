<UserControl x:Class="Gu.Gauges.Sample.FatStylesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauges="http://gu.se/Gauges"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="FatAngular" TargetType="{x:Type gauges:AngularGauge}">
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:AngularGauge}">
                        <Grid TextElement.FontSize="20">
                            <gauges:AngularTextBar Foreground="LightGray"
                                                   MaxAngle="{TemplateBinding MaxAngle}"
                                                   Maximum="{TemplateBinding Maximum}"
                                                   MinAngle="{TemplateBinding MinAngle}"
                                                   Minimum="{TemplateBinding Minimum}"
                                                   ReservedSpace="28"
                                                   TextOrientation="Horizontal"
                                                   TickFrequency="{TemplateBinding MajorTickFrequency}" />

                            <gauges:AngularBlockBar Fill="LightGray"
                                                    MaxAngle="{TemplateBinding MaxAngle}"
                                                    Maximum="1"
                                                    MinAngle="{TemplateBinding MinAngle}"
                                                    Minimum="0"
                                                    Opacity="0.2"
                                                    ReservedSpace="72"
                                                    TickLength="50"
                                                    Value="1" />

                            <gauges:AngularBlockBar Fill="White"
                                                    MaxAngle="{TemplateBinding MaxAngle}"
                                                    Maximum="{TemplateBinding Maximum}"
                                                    MinAngle="{TemplateBinding MinAngle}"
                                                    Minimum="{TemplateBinding Minimum}"
                                                    ReservedSpace="72"
                                                    TickLength="50"
                                                    Value="{TemplateBinding AnimatedValue}" />

                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding Value,
                                                      RelativeSource={RelativeSource TemplatedParent}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FatHorizontal" TargetType="{x:Type gauges:LinearGauge}">
            <Setter Property="Height" Value="50" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:LinearGauge}">
                        <Grid TextElement.FontSize="20">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <gauges:TextTickBar Grid.Row="0"
                                                Foreground="LightGray"
                                                Maximum="{TemplateBinding Maximum}"
                                                Minimum="{TemplateBinding Minimum}"
                                                Placement="Top"
                                                ReservedSpace="50"
                                                TextOrientation="{TemplateBinding TextOrientation}"
                                                TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                Ticks="{TemplateBinding MajorTicks}" />

                            <Rectangle Grid.Row="1"
                                       Margin="25,0,25,0"
                                       Fill="LightGray"
                                       Opacity="0.2" />

                            <gauges:BlockBar Grid.Row="1"
                                             Fill="White"
                                             Maximum="{TemplateBinding Maximum}"
                                             Minimum="{TemplateBinding Minimum}"
                                             Placement="Top"
                                             ReservedSpace="50"
                                             Value="{TemplateBinding AnimatedValue}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF1D1D1D" TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <gauges:AngularGauge IsDirectionReversed="False"
                             MajorTickFrequency="50"
                             MaxAngle="0"
                             Maximum="{Binding Maximum,
                                               ElementName=ValueSlider}"
                             MinAngle="-180"
                             Minimum="{Binding Minimum,
                                               ElementName=ValueSlider}"
                             Style="{StaticResource FatAngular}"
                             Value="{Binding Value,
                                             ElementName=ValueSlider}" />

        <gauges:LinearGauge Grid.Row="1"
                            IsDirectionReversed="False"
                            MajorTickFrequency="25"
                            Maximum="{Binding Maximum,
                                              ElementName=ValueSlider}"
                            Minimum="{Binding Minimum,
                                              ElementName=ValueSlider}"
                            Style="{StaticResource FatHorizontal}"
                            Value="{Binding Value,
                                            ElementName=ValueSlider}" />

        <Slider x:Name="ValueSlider"
                Grid.Row="2"
                Maximum="100"
                Minimum="0"
                Value="14" />
    </Grid>
</UserControl>
