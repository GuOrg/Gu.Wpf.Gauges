<Application x:Class="Gu.Gauges.Sample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gauges="http://gu.se/Gauges"
             xmlns:sample="clr-namespace:Gu.Gauges.Sample"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type Slider}">
            <Setter Property="TickFrequency" Value="1" />
            <Setter Property="IsSnapToTickEnabled" Value="True" />
        </Style>

        <Style x:Key="FatAngular" TargetType="{x:Type gauges:AngularGauge}">
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:AngularGauge}">
                        <Grid TextElement.FontSize="20">
                            <gauges:AngularTextBar Foreground="LightGray"
                                                   MaxAngle="{TemplateBinding MaxAngle}"
                                                   Maximum="{TemplateBinding Maximum}"
                                                   MinAngle="{TemplateBinding MinAngle}"
                                                   Minimum="{TemplateBinding Minimum}"
                                                   TextOrientation="{TemplateBinding TextOrientation}"
                                                   TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                   Ticks="{TemplateBinding MajorTicks}" />
                            <gauges:AngularBlockBar Fill="LightGray"
                                                    MaxAngle="{TemplateBinding MaxAngle}"
                                                    Maximum="1"
                                                    MinAngle="{TemplateBinding MinAngle}"
                                                    Minimum="0"
                                                    Opacity="0.2"
                                                    ReservedSpace="50"
                                                    TickLength="55"
                                                    Value="1" />
                            <gauges:AngularBlockBar Fill="White"
                                                    MaxAngle="{TemplateBinding MaxAngle}"
                                                    Maximum="{TemplateBinding Maximum}"
                                                    MinAngle="{TemplateBinding MinAngle}"
                                                    Minimum="{TemplateBinding Minimum}"
                                                    ReservedSpace="50"
                                                    TickLength="55"
                                                    Value="{TemplateBinding AnimatedValue}" />
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding Value,
                                                      RelativeSource={RelativeSource TemplatedParent}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FatHorizontal" TargetType="{x:Type gauges:LinearGauge}">
            <Setter Property="Height" Value="50" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type gauges:LinearGauge}">
                        <Grid TextElement.FontSize="20">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <gauges:TextTickBar Grid.Row="0"
                                                Foreground="LightGray"
                                                Maximum="{TemplateBinding Maximum}"
                                                Minimum="{TemplateBinding Minimum}"
                                                Placement="Top"
                                                TextOrientation="{TemplateBinding TextOrientation}"
                                                TickFrequency="{TemplateBinding MajorTickFrequency}"
                                                Ticks="{TemplateBinding MajorTicks}" />
                            <gauges:BlockBar Grid.Row="1"
                                             Fill="LightGray"
                                             Maximum="1"
                                             Minimum="0"
                                             Opacity="0.2"
                                             Placement="Top"
                                             Value="1" />
                            <gauges:BlockBar Grid.Row="1"
                                             Fill="White"
                                             Maximum="{TemplateBinding Maximum}"
                                             Minimum="{TemplateBinding Minimum}"
                                             Placement="Top"
                                             Value="{TemplateBinding AnimatedValue}" />

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="VmTemplate" DataType="{x:Type sample:Vm}">
            <GroupBox Header="Control the vm">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Min" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Min}" />
                    <Slider Grid.Row="0"
                            Grid.Column="2"
                            Maximum="{Binding Max}"
                            Minimum="-200"
                            Value="{Binding Min}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Max" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding Max}" />
                    <Slider Grid.Row="1"
                            Grid.Column="2"
                            Maximum="200"
                            Minimum="{Binding Min}"
                            Value="{Binding Max}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Value" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding Value}" />
                    <Slider Grid.Row="2"
                            Grid.Column="2"
                            Maximum="{Binding Max}"
                            Minimum="{Binding Min}"
                            Value="{Binding Value}" />
                </Grid>
            </GroupBox>
        </DataTemplate>

        <DataTemplate DataType="{x:Type sample:TickBarVm}">
            <GroupBox Header="Controls">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Minimum" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Minimum}" />

                    <Slider Grid.Row="0"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="0"
                            Value="{Binding Minimum}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Maximum" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding Maximum}" />
                    <Slider Grid.Row="1"
                            Grid.Column="2"
                            Maximum="100"
                            Minimum="{Binding Minimum}"
                            Value="{Binding Maximum}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Value" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding Value}" />
                    <Slider Grid.Row="2"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="{Binding Minimum}"
                            Value="{Binding Value}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="TickFrequency" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding TickFrequency}" />
                    <Slider Grid.Row="3"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="{Binding Minimum}"
                            Value="{Binding TickFrequency}" />

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Text="Ticks" />
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Text="{Binding Ticks}" />

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Text="ReservedSpace" />
                    <TextBox Grid.Row="5"
                             Grid.Column="1"
                             Text="{Binding ReservedSpace}" />
                    <Slider Grid.Row="5"
                            Grid.Column="2"
                            Maximum="50"
                            Minimum="0"
                            Value="{Binding ReservedSpace}" />

                    <TextBlock Grid.Row="6"
                               Grid.Column="0"
                               Text="TickBarPlacement" />
                    <ComboBox Grid.Row="6"
                              Grid.Column="1"
                              SelectedItem="{Binding Placement}"
                              sample:ItemsControlExt.EnumSource="{x:Type TickBarPlacement}" />


                    <TextBlock Grid.Row="7"
                               Grid.Column="0"
                               Text="TextOrientation" />
                    <ComboBox Grid.Row="7"
                              Grid.Column="1"
                              SelectedItem="{Binding TextOrientation}"
                              sample:ItemsControlExt.EnumSource="{x:Type gauges:TextOrientation}" />

                    <TextBlock Grid.Row="8"
                               Grid.Column="0"
                               Text="IsDirectionReversed" />
                    <CheckBox Grid.Row="8"
                              Grid.Column="1"
                              IsChecked="{Binding IsDirectionReversed}" />
                </Grid>
            </GroupBox>
        </DataTemplate>

        <DataTemplate DataType="{x:Type sample:AngularTickBarVm}">
            <GroupBox Header="Controls">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Minimum" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Minimum}" />

                    <Slider Grid.Row="0"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="0"
                            Value="{Binding Minimum}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="MinAngle" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding MinAngle}" />
                    <Slider Grid.Row="1"
                            Grid.Column="2"
                            Maximum="{Binding MaxAngle}"
                            Minimum="0"
                            Value="{Binding MinAngle}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Value" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding Value}" />
                    <Slider Grid.Row="2"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="{Binding Minimum}"
                            Value="{Binding Value}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Maximum" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding Maximum}" />
                    <Slider Grid.Row="3"
                            Grid.Column="2"
                            Maximum="100"
                            Minimum="{Binding Minimum}"
                            Value="{Binding Maximum}" />

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Text="MaxAngle" />
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Text="{Binding MaxAngle}" />
                    <Slider Grid.Row="4"
                            Grid.Column="2"
                            Maximum="100"
                            Minimum="{Binding MinAngle}"
                            Value="{Binding MaxAngle}" />

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Text="TickFrequency" />
                    <TextBox Grid.Row="5"
                             Grid.Column="1"
                             Text="{Binding TickFrequency}" />
                    <Slider Grid.Row="5"
                            Grid.Column="2"
                            Maximum="{Binding Maximum}"
                            Minimum="{Binding Minimum}"
                            Value="{Binding TickFrequency}" />

                    <TextBlock Grid.Row="6"
                               Grid.Column="0"
                               Text="Ticks" />
                    <TextBox Grid.Row="6"
                             Grid.Column="1"
                             Text="{Binding Ticks}" />

                    <TextBlock Grid.Row="7"
                               Grid.Column="0"
                               Text="ReservedSpace" />
                    <TextBox Grid.Row="7"
                             Grid.Column="1"
                             Text="{Binding ReservedSpace}" />
                    <Slider Grid.Row="7"
                            Grid.Column="2"
                            Maximum="50"
                            Minimum="0"
                            Value="{Binding ReservedSpace}" />

                    <TextBlock Grid.Row="8"
                               Grid.Column="0"
                               Text="TickBarPlacement" />
                    <ComboBox Grid.Row="8"
                              Grid.Column="1"
                              SelectedItem="{Binding Placement}"
                              sample:ItemsControlExt.EnumSource="{x:Type TickBarPlacement}" />

                    <TextBlock Grid.Row="9"
                               Grid.Column="0"
                               Text="TextOrientation" />
                    <ComboBox Grid.Row="9"
                              Grid.Column="1"
                              SelectedItem="{Binding TextOrientation}"
                              sample:ItemsControlExt.EnumSource="{x:Type gauges:TextOrientation}" />

                    <TextBlock Grid.Row="10"
                               Grid.Column="0"
                               Text="IsDirectionReversed" />
                    <CheckBox Grid.Row="10"
                              Grid.Column="1"
                              IsChecked="{Binding IsDirectionReversed}" />
                </Grid>
            </GroupBox>
        </DataTemplate>
    </Application.Resources>
</Application>